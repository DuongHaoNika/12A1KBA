          <div class="star"></div>
          <div class="star"></div>
          <div class="star"></div>
        </div>
        <div class="wrap-login p-t-30 p-b-50">
          <span class="login-title p-b-41">Account Login</span>
          <form action="/login" method="post" class="login-form">
            <div class="wrap-input">
              <span class="input-icon">
                <i class="fa-solid fa-user"></i>
              </span>
              <input
                class="login-input"
                placeholder="Username"
                type="text"
                name="username"
              />
              <span class="focus-input"></span>
            </div>
            <div class="wrap-input">
              <span class="input-icon">
                <i class="fa-solid fa-lock"></i>
              </span>
              <input
                class="login-input"
                placeholder="Password"
                type="password"
                name="password"
              />
              <div class="show-hide-password">
                <span class="show-password eye-icon">
                  <i class="fa-solid fa-eye"></i>
                </span>
                <span class="hide-password eye-icon">
                  <i class="fa-solid fa-eye-slash"></i>
                </span>
              </div>
            </div>
            <% if(typeof(error) !== "undefined") { %>
              <p style="color: red; text-align: center; justify-content: center; "><%= error %></p>
            <% } %>
            <div class="wrap-btn">
              <button class="login-btn">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/login.js"></script>
  </body>
</html>
